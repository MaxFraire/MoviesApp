<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <aapt:attr name="android:drawable">
        <vector
            android:name="vector"
            android:width="24dp"
            android:height="24dp"
            android:viewportWidth="24"
            android:viewportHeight="24">
            <group android:name="group_1">
                <group android:name="vector_1">
                    <path
                        android:name="left_side"
                        android:pathData="M 12 21.35 L 10.55 20.03 C 5.4 15.36 2 12.28 2 8.5 C 2 5.42 4.42 3 7.5 3 C 9.24 3 10.91 3.81 12 5.09 C 13.09 3.81 14.76 3 16.5 3 C 19.58 3 22 5.42 22 8.5 C 22 12.28 18.6 15.36 13.45 20.04 L 12 21.35 Z"
                        android:fillColor="#ff2d69"
                        android:strokeColor="#ff2d69"
                        android:strokeAlpha="0"
                        android:strokeWidth="2"
                        android:strokeLineCap="round"
                        android:strokeLineJoin="round"/>
                </group>
            </group>
        </vector>
    </aapt:attr>
    <target android:name="left_side">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="trimPathEnd"
                    android:duration="500"
                    android:interpolator="@android:anim/linear_interpolator"
                    android:valueFrom="0"
                    android:valueTo="1"
                    android:valueType="floatType"
                    android:startOffset="100" />
                <objectAnimator
                    android:propertyName="trimPathOffset"
                    android:duration="500"
                    android:interpolator="@android:anim/linear_interpolator"
                    android:valueFrom="0"
                    android:valueTo="0.5"
                    android:valueType="floatType"
                    android:startOffset="100" />
                <objectAnimator
                    android:propertyName="fillAlpha"
                    android:duration="250"
                    android:valueFrom="1"
                    android:valueTo="0"
                    android:valueType="floatType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
                <objectAnimator
                    android:propertyName="strokeAlpha"
                    android:duration="500"
                    android:interpolator="@android:anim/linear_interpolator"
                    android:valueFrom="0.1"
                    android:valueTo="1"
                    android:valueType="floatType"
                    android:startOffset="100" />
            </set>
        </aapt:attr>
    </target>
</animated-vector>
